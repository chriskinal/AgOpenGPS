<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AgOpenGPS.Avalonia.ViewModels"
        xmlns:gl="using:AgOpenGPS.Avalonia.OpenGL"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="768"
        x:Class="AgOpenGPS.Avalonia.Desktop.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}"
        Width="1024" Height="768">

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" Background="#2D2D30" Padding="8,4">
            <TextBlock Text="{Binding StatusText}" Foreground="White" FontSize="12"/>
        </Border>

        <!-- Main OpenGL Viewport -->
        <gl:AgOpenGLControl x:Name="OpenGLControl" />
    </DockPanel>

</Window>
